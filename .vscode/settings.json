{
    "latex-workshop.latex.tools": [
        {
            "name": "tectonic",
            "command": "/opt/homebrew/bin/tectonic",
            "args": [
                "--synctex", // enable SyncTeX for PDF â†” source sync
                "--keep-logs", // keep .log files if you want debugging
                "--keep-intermediates", // keep aux files (optional)
                "%DOC%.tex"
            ]
        }
    ],
    "editor.wordWrap": true,
    "latex-workshop.latex.rootFile.useSubFile": true,
    "[latex]": {
        "editor.defaultFormatter": "James-Yu.latex-workshop",
        "editor.formatOnSave": true
    },
    "latex-workshop.formatting.latex": "latexindent",
    "latex-workshop.formatting.latexindent.path": "/opt/homebrew/bin/latexindent",
    "latex-workshop.formatting.latexindent.args": [
        "-c",
        "%DIR%", // look for local settings
        "%TMPFILE%"
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "tectonic",
            "tools": [
                "tectonic"
            ]
        }
    ]
}